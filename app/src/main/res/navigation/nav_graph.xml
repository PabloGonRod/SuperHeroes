<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/feed_fragment">

    <action
        android:id="@+id/action_to_feed"
        app:destination="@id/feed_fragment"/>
    <action
        android:id="@+id/action_to_profile"
        app:destination="@id/profile_fragment"/>

    <fragment
        android:id="@+id/feed_fragment"
        android:name="com.pgonrod.superheroes.presentation.SuperHeroesFeedFragment"
        tools:layout="@layout/fragment_super_heroes_feed">

        <action
            android:id="@+id/action_from_fragment_feed_to_fragment_detail"
            app:destination="@id/detail_fragment"/>

    </fragment>

    <fragment
        android:id="@+id/detail_fragment"
        android:name="com.pgonrod.superheroes.presentation.SuperHeroesDetailFragment"
        tools:layout="@layout/fragment_super_heroes_detail">

        <argument
            android:name="superheroId"
            app:nullable="false"
            app:argType="Int"/>

    </fragment>

    <fragment
        android:id="@+id/profile_fragment"
        android:name="com.pgonrod.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile">

    </fragment>


</navigation>